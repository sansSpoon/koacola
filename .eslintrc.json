{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "script"
  },
  "extends": "airbnb-base",
  "rules": {
    "indent": ["error", "tab", { "MemberExpression": 1 }],
    "no-tabs": "off",
    
    //ES6
    "arrow-parens": ["error", "always"],
    
    //Style
    "padded-blocks": "off",
    "max-len": "off",
    
    //Best Practice
    "consistent-return": "off",
    
    //imports
    "global-require": "off",
    "import/no-dynamic-require": "off"
  }
}